@model TecWebProject.Models.Catalogo

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Catalogo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria)
        </dd>

    </dl>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Site.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Site.Acesso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Site.Link)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Sites)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acesso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
    
        </tr>
    }

</table>



@if (Session["User"] != null)
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
else
{
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
}
